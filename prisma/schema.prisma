generator client {
  provider = "prisma-client-js"
}

datasource SoccerProject_DB {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id       Int    @id @default(autoincrement())
  account  String @unique
  password String
  nickName String @unique
  cash     Int    @default(2000)
  rp       Int    @default(1000)

  inventory Inventory?
  team      Team?
  playerInventory PlayerInventory[]  
  materials         Material[]

  @@map("Account")
}

model Inventory {
  inventoryId Int @id @default(autoincrement())
  accountId   Int @unique @map("account_id")
  playerId    Int

  user Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("Inventory")
}

model Team {
  teamId    Int @id @default(autoincrement())
  accountId Int @unique @map("account_id")
  playerId  Int

  user Account @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@map("Team")
}

model Player {
  playerId Int    @id @default(autoincrement())
  name     String @unique
  rarity   String
  speed    Int
  goal     Int
  shot     Int
  defense  Int
  stamina  Int

  playerInventory PlayerInventory[]

  @@map("Player")
}

model PlayerInventory {
  id              Int      @id @default(autoincrement())
  accountId       Int     
  playerId        Int      
  enhancementLevel Int @default(0)  
  player          Player   @relation(fields: [playerId], references: [playerId])
  account         Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)

  @@unique([accountId, playerId, enhancementLevel]) 
}

model Material {
  id           Int     @id @default(autoincrement())
  accountId    Int
  materialType String 
  account      Account  @relation(fields: [accountId], references: [id], onDelete: Cascade)
}